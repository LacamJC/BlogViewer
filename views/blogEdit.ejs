            <label for="autorInput" class="form-label">Autor</label>
            <input type="text" name="autor" id="autorInput" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="tituloInput" class="form-label">TÃ­tulo do artigo</label>
